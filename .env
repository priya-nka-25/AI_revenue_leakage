# AI Configuration - Required for LLM features
OPENAI_API_KEY=sk-your-actual-openai-api-key-here
GEMINI_API_KEY=your-google-gemini-api-key-here

# Vector Database Configuration
VECTOR_DB_TYPE=faiss
# Options: faiss (recommended), pinecone, weaviate

# Embedding Model Configuration
EMBEDDING_MODEL=mxbai-embed-large
EMBEDDING_DIMENSION=1024

# Optional: Pinecone Configuration (if using Pinecone instead of FAISS)
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=your-pinecone-environment-here

# Optional: Weaviate Configuration (if using Weaviate instead of FAISS)
WEAVIATE_URL=your-weaviate-cluster-url-here
WEAVIATE_API_KEY=your-weaviate-api-key-here

# System Configuration
DEBUG=True
FLASK_ENV=development

# Customer Data Processing Configuration
CHUNK_SIZE=800
CHUNK_OVERLAP=100
BATCH_SIZE=32
SIMILARITY_THRESHOLD=0.1

# AI Processing Configuration
MAX_TOKENS=2000
TEMPERATURE=0.1
AI_TIMEOUT=30